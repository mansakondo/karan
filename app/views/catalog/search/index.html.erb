<main class="mt-6">
  <%= form_tag catalog_search_path, id: :search, method: :get, class: "flex gap-2 w-min my-0 mx-auto" do %>
    <%= search_field_tag :query, nil, placeholder: 'Type "sherlock holmes"', class: "w-80 border-b focus:outline-none" %>
    <%= button_tag nil, class: "flex align-top ml-2" do %>
      <span class="material-icons">search</span>
    <% end %>
  <% end %>

  <div class="flex mt-10 gap-10">
    <div class="pr-10 border-r">
      <%= render FacetsComponent.new aggregations: @response.aggregations %>
    </div>

    <% if @response.results.present? %>
      <ul class="mt-6">
        <% @response.results.each do |record| %>
          <li><%= record.title %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</main>
